@model HealthyRecipes.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h2>Recipe Details</h2>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
        </dd>
        <dt class="col-sm-2"></dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="300" height="250" />
        </dd>
        <dt class="col-sm-2">
            How to prepare :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrepareTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrepareTime)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Made by:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chef.FullName)
        </dd>
    </dl>
</div>

<br />
<p>Ingredients:</p>


@foreach (var ingredient in Model.Ingredients)
{
    <a asp-action="Details" asp-route-id="@ingredient.Ingredient.Id">@ingredient.Ingredient.Name</a>
   <ul>
       <li>
          Calories @ingredient.Ingredient.CaloriesPerItem 
       </li>
       <li>
          Sugar  @ingredient.Ingredient.SugarPerItem grams
       </li>
       <li>
          Proteins @ingredient.Ingredient.ProteinsPerItem grams
       </li>
   </ul>

}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
